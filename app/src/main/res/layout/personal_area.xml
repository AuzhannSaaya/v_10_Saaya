<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalArea">

      <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Личный кабинет"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="25dp" />

      <ImageView
        android:id="@+id/imageShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/share"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="23dp" />

      <ImageView
        android:id="@+id/imageBell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bell"
        tools:layout_editor_absoluteX="355dp"
        tools:layout_editor_absoluteY="25dp"
          tools:ignore="MissingConstraints" />

      <TextView
        android:id="@+id/txtUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Привет,User!"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="78dp"
          tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/upper_us"
        android:layout_width="400dp"
        android:layout_height="95dp"
        android:background="@color/area"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="208dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto"
            android:text="Вы забронировали билеты"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto"
            android:text="OVB - MOW"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/roboto"
            android:text="Оплатить через сайт"
            android:textColor="@color/black"
            android:textSize="14dp" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageAir"
        android:layout_width="331dp"
        android:layout_height="175dp"
        app:srcCompat="@drawable/air"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="484dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:gravity="center"
        android:onClick="startNotice"
        android:text="Оплатить через сайт"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="341dp" />

</androidx.constraintlayout.widget.ConstraintLayout>