<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notice">

    <LinearLayout
        android:layout_width="318dp"
        android:layout_height="211dp"
        android:background="@color/area"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="153dp">

        <TextView
            android:id="@+id/txt3"
            android:layout_width="291dp"
            android:layout_height="33dp"
            android:text="Вы успешно забронировали билеты на самолет"
            android:textColor="@color/hint"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="291dp"
            android:layout_height="33dp"
            android:text="Заканчивается время бронирования билетов"
            android:textColor="@color/hint"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="311dp"
            android:layout_height="150dp"
            android:text="Оплатите билеты до 22 декабря, в 11:20"
            android:textColor="@color/hint"
            android:textSize="14dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="18dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Уведомления"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="18dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Включить уведомления"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="487dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Предлагать выгодные условия"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="525dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Показывать только прямые перелеты"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="563dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="307dp"
        tools:layout_editor_absoluteY="477dp" />


</androidx.constraintlayout.widget.ConstraintLayout>